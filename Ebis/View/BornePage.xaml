<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ebis.View.BornePage"
             xmlns:model="clr-namespace:Ebis.Model"
             xmlns:vm="clr-namespace:Ebis.ViewModel"
             x:DataType="vm:infoBorneViewModel"
             Title="BornePage">
    <HorizontalStackLayout Padding="10" Spacing="15" HorizontalOptions="Center">
        <Label Text="{Binding BorneAfficher.idBorne}" FontSize="20" TextColor="White"></Label>
        <Label Text="{Binding BorneAfficher.date_mise_en_service}" FontSize="15" TextColor="White"></Label>
        <Label Text="{Binding BorneAfficher.date_derniere_revision}" FontSize="15" TextColor="White"></Label>
        <Label Text="{Binding BorneAfficher.libelle_type_charge}" FontSize="15" TextColor="White"></Label>
    </HorizontalStackLayout>
</ContentPage>